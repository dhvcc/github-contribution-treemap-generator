{
  "name": "@dhvcc/github-contribution-treemap-generator",
  "version": "0.0.4",
  "description": "GitHub contribution treemap SVG generator",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": "./dist/cli.js"
  },
  "bin": {
    "github-contribution-treemap-generator": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && tsup",
    "local": "tsc && tsup && node -r dotenv/config ./dist/cli.js -o treemap.svg",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "type-check": "tsc --noEmit",
    "treemap": "npm run build && node dist/cli.js"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "github",
    "contributions",
    "treemap",
    "svg",
    "visualization"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dhvcc/contribution-treemap-generator.git"
  },
  "homepage": "https://github.com/dhvcc/contribution-treemap-generator#readme",
  "bugs": {
    "url": "https://github.com/dhvcc/contribution-treemap-generator/issues"
  },
  "dependencies": {
    "@octokit/graphql": "7.1.1",
    "commander": "^11.0.0",
    "d3-hierarchy": "^3.1.2"
  },
  "devDependencies": {
    "@types/d3-hierarchy": "^3.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "*",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
